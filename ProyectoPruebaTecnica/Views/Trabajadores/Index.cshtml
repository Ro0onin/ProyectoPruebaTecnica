@model IEnumerable<ProyectoPruebaTecnica.Models.Trabajadores>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de Trabajadores</h1>

<p>
    <a asp-action="Create">Nuevo Registro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TipoDocumento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroDocumento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sexo)
            </th>
            <th>Departamento</th>
            <th>Provincia</th>
            <th>Distrito</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TipoDocumento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroDocumento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombres)
            </td>
                <td>
                    @if (item.Sexo == "M")
                    {
                        <span class="badge bg-primary">Masculino</span>
                    }
                    else if (item.Sexo == "F")
                    {
                        <span class="badge bg-warning text-dark">Femenino</span>
                    }
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdDepartamentoNavigation.NombreDepartamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProvinciaNavigation.NombreProvincia)
            </td>
            <td>
                 @Html.DisplayFor(modelItem => item.IdDistritoNavigation.NombreDistrito)
             </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id" onclick="return confirm('¿Estás seguro de eliminar este registro?');">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
